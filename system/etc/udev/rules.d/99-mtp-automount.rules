# MTP Device Automount Rules
# These rules trigger automatic mounting for MTP devices that can't use udisks2
#
# Install with: sudo cp ~/.dotfiles/system/etc/udev/rules.d/99-mtp-automount.rules /etc/udev/rules.d/
# Reload with:  sudo udevadm control --reload-rules

# YoloBox Extreme (and other YoloBox models using Google MTP ID)
# Vendor: 18d1 (Google), Product: 4ee1 (Nexus/Pixel MTP)
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="18d1", ATTR{idProduct}=="4ee1", \
    TAG+="systemd", ENV{SYSTEMD_USER_WANTS}="mtp-automount@YoloBox.service"

ACTION=="remove", SUBSYSTEM=="usb", ENV{ID_VENDOR_ID}=="18d1", ENV{ID_MODEL_ID}=="4ee1", \
    RUN+="/usr/local/bin/mtp-automount-helper remove YoloBox"

