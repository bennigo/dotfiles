  {
    "mcpServers": {
      "fetch": {
        "command": "uvx",
        "args": [
          "mcp-server-fetch"
        ]
      },
      "brave-search": {
        "command": "npx",
        "args": [
          "-y",
          "@brave/brave-search-mcp-server"
        ],
        "env": {
          "BRAVE_API_KEY": "${BRAVE_API_KEY}"
        }
      },
      "postgres-local": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${LOCAL_POSTGRES_URL}",
          "ALLOW_WRITE": "true"
        }
      },
      "postgres-gas-readonly": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp",
          "--readonly"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${PROD_GAS_URL}"
        }
      },
      "postgres-skjalftalisa-readonly": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp",
          "--readonly"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${PROD_SKJALFTALISA_URL}"
        }
      },
      "postgres-tos-readonly": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp",
          "--readonly"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${PROD_TOS_URL}"
        }
      },
      "postgres-epos-readonly": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp",
          "--readonly"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${DEV_EPOS_URL}"
        }
      },
      "postgres-gnss-readonly": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp",
          "--readonly"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${DEV_GNSS_URL}"
        }
      },
      "postgres-metrics-readonly": {
        "command": "npx",
        "args": [
          "-y",
          "@crystaldba/postgres-mcp",
          "--readonly"
        ],
        "env": {
          "POSTGRES_CONNECTION": "${DEV_METRICS_URL}"
        }
      }
    }
  }
